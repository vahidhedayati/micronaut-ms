{
  "micronaut": {
    "server": {
      "port": 8080,
      "cors": {
        "enabled": true,
        "configurations": {
          "web": {
            "allowedMethods": ["POST", "GET"]
          }
        }
      }
    },
    "application": {
      "name":"beerfront"
    },
    "router": {
      "static": {
        "resources": {
          "enabled": true,
          "mapping": "/**",
          "paths": ["classpath:static"]
        }
      }
    }
  },
  "consul": {
    "client": {
      "registration":{
          "enabled":false
      },
      "defaultZone":"${CONSUL_HOST:localhost}:${CONSUL_PORT:8500}"
    }
  }
}


